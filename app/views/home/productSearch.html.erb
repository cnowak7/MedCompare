<p> <h1>Product Search</h1> </p>
<%= form_tag :action => 'productSearch' do %>
	<p>What Product are you looking for?: 
	<%= text_field_tag 'searchInput', @searchInput %> </p>
	<hr/>
	<% if @results>0 %>
		<% if @productList.length >0 %>
			<p> Here are the search results:</p>
			<p>
			<table class="table">
			<tr>
				<th>Product Name</th>
				<th>Image</th>
				<th>Description</th>
				<th>Price</th>
			</tr>
			<% @productList.each do |p| %>
				<tr>
				<td><%= link_to p.name, product_path(p.id) %></td>
				<td><%= image_tag p.image, size: "400x200" %></td>
				<td><%= p.description %></td>
				<td><%= number_to_currency(p.price) %> </td>
				</tr>
			<% end %>
			</table>
		<% else%>
			<p>There were no products that matched your search criteria. Try again!</p>
		<% end %>
	<% end %>
	<%= submit_tag 'Search' %>
<% end %>
