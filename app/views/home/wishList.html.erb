<h2>My Wish List</h2>
<br><br>
<% if !session[:wish_list_products].nil? %>

	<% i=0 %>
	<% cartlen = session[:wish_list_products].length %>

	<% if cartlen >0 %>

		<table border=1 class="table">
			<tr>
				<th> Product Name </th>
				<th> Price </th>
			</tr>
			
			<% while i < cartlen %>
				<tr>
					<td> <%= Product.find(session[:wish_list_products][i].to_i).name %> </td>
					<td align='right'> <%= number_to_currency(Product.find(session[:wish_list_products][i].to_i).price) %> </td>
					<td> 
						<%= form_tag :controller => 'home', :action => 'removeFromWishList' do %>
							<%= hidden_field_tag 'product_id', "#{i}" %>
							<%= submit_tag 'Remove' %>
					    <% end %>
					</td>
				</tr>
				<% i = i + 1 %>
			<% end %>
		</table>
					
	<% else %>

		<p> There are no products in this wish list. Add products that you're interested in from the Catalog. </p>

	<% end %>

<% else %>

		<p> There are no products in this wish list. Add products that you're interested in from the Catalog. </p>

<% end %>
<br><br>