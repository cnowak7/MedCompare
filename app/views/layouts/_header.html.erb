
	<div class="first_header" >
		<div class="logo">
		<!-- <%= link_to (image_tag "storeLogo - small.png"), index_path %> -->
		<h1>MedCompare</h1>
		</div>

		<div class="searchbox">
			<% if current_user %>
				<%= form_tag controller: "home", action: "search" do %>
					<%= text_field_tag 'searchInput', nil, id: "box", placeholder: "Search For Products And/Or Vendors..."%>
				<% end %>
			<% end %>
		</div>

		<div class="login_sign">
			<% if current_user %>
				<p style="color:white;">Logged in as <%= current_user.email %>.</p>
				<%= link_to "Log Out", session_path("current"), method: "delete" %>
			<% end %>
		</div>
	</div>

	<div class="second_header">
		<%= link_to "Home", index_path %>
		<%= link_to "About Us", about_path %>
		<%= link_to "Contact Us", contact_path %>
		<% if current_user %>
			<%= link_to "Catalog", catalog_path %>
			<% productComparisonCartString = "Product Comparison Cart (" + product_compare_cart.length.to_s + ")" %>
			<%= link_to productComparisonCartString, productCompareCart_path %>
			<% if session[:role] == "clinic" || session[:role] == "admin" %>
				<% wishListString = "My Wish List (" + wish_list.length.to_s + ")" %>
				<%= link_to wishListString, wishList_path %>
			<% elsif session[:role] == "vendor" %>
				<%= link_to "My Products", my_products_path %>
			<% end %>
		<% end %>
	</div>


	<% if session[:role] == "admin" %>
		<div class="third_header">
			<%= link_to "Products", products_path %>
			<%= link_to "Categories", categories_path %>
			<%= link_to "Vendors", vendors_path %>
			<%= link_to "Clinics", clinics_path %>
		</div>
	<% end %>


