<div class="Catalog_page">
<h1>Our Catalog </h1>


</div>
<table border=1>
	<tr>
		<th>Product Name</th>
		<th>Image</th>
		<th>Description</th>
		<th>Sale Price</th>
	</tr>
	
	<% @products.each do |product| %>
		<tr>
			<td><%= product.name %></td>
			<td><%= image_tag product.image, size: "400x200" %> </td>
			<td><%= product.description %> </td>
			<td><%= number_to_currency(product.price) %> </td>
		</tr>
	<%end%>
</table>
</div>
